<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="card-title">
            <i class="fas fa-clock mr-2"></i>
            Gestión de Horarios de Usuario
          </h5>
        </div>
        <div class="card-body">
          <!-- Formulario de selección -->
          <form class="row mb-4">
            <div class="col-md-6">
              <label for="usuario" class="form-label">
                <i class="fas fa-user mr-1"></i>
                Usuario:
              </label>
              
              <!-- DEBUG INFO -->
              <div class="alert alert-info">
                <p><strong>DEBUG:</strong></p>
                <p>usuarios.length = {{ usuarios.length }}</p>
                <p>usuarioSeleccionado = {{ usuarioSeleccionado }}</p>
                <p>FormsModule available = {{ usuarios.length > 0 ? 'true' : 'false' }}</p>
                <div *ngIf="usuarios.length > 0">
                  <p><strong>Primer usuario:</strong></p>
                  <p>ID: {{ usuarios[0].id }}</p>
                  <p>Nombre: {{ usuarios[0].nombreEmpleado }}</p>
                  <p>Número: {{ usuarios[0].numero }}</p>
                </div>
              </div>
              
              <!-- Lista de usuarios para debug -->
              <div class="mb-3">
                <strong>Lista usuarios (div test):</strong>
                <div *ngFor="let usuario of usuarios" class="border p-2 mb-1">
                  {{ usuario.nombreEmpleado }} ({{ usuario.numero }}) - ID: {{ usuario.id }}
                </div>
              </div>

              <!-- Debug de opciones del select -->
              <div class="mb-3 alert alert-warning">
                <strong>Debug de opciones que deberían aparecer:</strong>
                <ul>
                  <li *ngFor="let usuario of usuarios">
                    Value: "{{ usuario.id.toString() }}" - Text: "{{ usuario.nombreEmpleado }} ({{ usuario.numero }})"
                  </li>
                </ul>
              </div>

              <select 
                id="usuario"
                class="form-select"
                [(ngModel)]="usuarioSeleccionado"
                name="usuario"
                (change)="onUsuarioSeleccionado($event)">
                <option value="">Seleccione un usuario...</option>
                <option 
                  *ngFor="let usuario of usuarios"
                  [value]="usuario.id.toString()">
                  {{ usuario.nombreEmpleado }} ({{ usuario.numero }})
                </option>
              </select>
            </div>

            <div class="col-md-6" *ngIf="usuarioSeleccionado">
              <label for="dia" class="form-label">
                <i class="fas fa-calendar mr-1"></i>
                Día de la Semana:
              </label>
              <select 
                id="dia"
                class="form-select"
                [(ngModel)]="diaSeleccionado"
                name="dia"
                (change)="loadHorariosDia()">
                <option [ngValue]="null">Seleccione un día...</option>
                <option 
                  *ngFor="let dia of diasSemana" 
                  [ngValue]="dia.id">
                  {{ dia.nombre }}
                </option>
              </select>
            </div>
          </form>

          <!-- Gestión de turnos -->
          <div *ngIf="usuarioSeleccionado && diaSeleccionado !== null" class="mt-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <h6 class="mb-0">
                <i class="fas fa-business-time mr-1"></i>
                Turnos Configurados
              </h6>
              <button 
                type="button" 
                class="btn btn-success btn-sm"
                (click)="addTurno()"
                [disabled]="isLoading">
                <i class="fas fa-plus mr-1"></i>
                Agregar Turno
              </button>
            </div>

            <!-- Lista de turnos -->
            <div *ngIf="turnos.length === 0" class="alert alert-info">
              <i class="fas fa-info-circle mr-1"></i>
              No hay turnos configurados para este día.
            </div>

            <div class="row">
              <div class="col-12">
                <form [formGroup]="horarioForm" (ngSubmit)="saveHorarios()">
                  <div formArrayName="turnos" class="space-y-3">
                    <div 
                      *ngFor="let turno of turnos.controls; let i = index" 
                      [formGroupName]="i"
                      class="card mb-3">
                      <div class="card-body">
                        <div class="row align-items-center">
                          <div class="col-md-2">
                            <label class="form-label">Turno {{ i + 1 }}</label>
                            <input 
                              type="number"
                              class="form-control"
                              formControlName="turnoNumero"
                              [value]="i + 1"
                              readonly>
                          </div>
                          <div class="col-md-4">
                            <label class="form-label">Hora Inicio</label>
                            <input 
                              type="time"
                              class="form-control"
                              formControlName="horaInicio"
                              required>
                          </div>
                          <div class="col-md-4">
                            <label class="form-label">Hora Fin</label>
                            <input 
                              type="time"
                              class="form-control"
                              formControlName="horaFin"
                              required>
                          </div>
                          <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <div>
                              <button 
                                type="button" 
                                class="btn btn-danger btn-sm w-100"
                                (click)="removeTurno(i)"
                                [disabled]="isLoading">
                                <i class="fas fa-trash mr-1"></i>
                                Eliminar
                              </button>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Botones de acción -->
                  <div class="d-flex justify-content-end gap-2 mt-4">
                    <button 
                      type="button" 
                      class="btn btn-secondary"
                      (click)="resetForm()"
                      [disabled]="isLoading">
                      <i class="fas fa-undo mr-1"></i>
                      Limpiar
                    </button>
                    <button 
                      type="submit" 
                      class="btn btn-primary"
                      [disabled]="horarioForm.invalid || isLoading"
                      *ngIf="turnos.length > 0">
                      <i class="fas fa-save mr-1"></i>
                      <span *ngIf="!isLoading">{{ isEditMode ? 'Actualizar' : 'Guardar' }}</span>
                      <span *ngIf="isLoading">
                        <i class="fas fa-spinner fa-spin mr-1"></i>
                        Guardando...
                      </span>
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
